<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="800.0" styleClass="root" stylesheets="@../Styles/Book.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanager.Controllers.BookController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="700.0" BorderPane.alignment="CENTER">
         <content>
            <GridPane fx:id="bookGrid" alignment="CENTER" hgap="15" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vgap="15">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </GridPane>
         </content>
      </ScrollPane>
   </center>
   <left>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="400.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
             <Label styleClass="form-title" text="Add a Book" />

             <Label styleClass="labeled" text="Title:" />
             <TextField fx:id="titleField" promptText="Book Title" />

             <Label styleClass="labeled" text="Author:" />
             <TextField fx:id="authorField" promptText="Author" />

             <Label styleClass="labeled" text="ISBN:" />
             <TextField fx:id="isbnField" promptText="ISBN" />

             <Label styleClass="labeled" text="Category ID:" />
             <TextField fx:id="categoryField" promptText="Category ID" />

             <Label styleClass="labeled" text="Publication Year:" />
             <TextField fx:id="yearField" promptText="Year" />

             <Label styleClass="labeled" text="Total Copies:" />
             <TextField fx:id="totalCopiesField" promptText="Total Number" />

             <Label styleClass="labeled" text="Available Copies:" />
             <TextField fx:id="availableCopiesField" promptText="Available" />
             <Label styleClass="labeled" text="Image Name:" />
             <TextField fx:id="imageNameField" promptText="Enter image file name (e.g. book1.jpg)" />
            <HBox>
               <children>
      
                   <Button fx:id="addBookButton" alignment="CENTER" maxWidth="1.7976931348623157E308" onAction="#handleAddBook" prefHeight="35.0" prefWidth="280.0" styleClass="final-button" text="Add Book" HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>

         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
